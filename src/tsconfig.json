{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },
  "files": [
    "app/+about/about.component.ts",
    "app/+about/index.ts",
    "app/+about/shared/index.ts",
    "app/+faq/faq.component.ts",
    "app/+faq/index.ts",
    "app/+faq/shared/index.ts",
    "app/+index/index.component.ts",
    "app/+index/index.ts",
    "app/+index/shared/index.ts",
    "app/+reviews/index.ts",
    "app/+reviews/reviews.component.ts",
    "app/+reviews/shared/index.ts",
    "app/app.component.ts",
    "app/environment.ts",
    "app/index.ts",
    "app/radio-control-registry-fix.directive.ts",
    "app/review-form/index.ts",
    "app/review-form/review-form.component.ts",
    "app/review-form/shared/index.ts",
    "app/review-group/index.ts",
    "app/review-group/review-comments.component.ts",
    "app/review-group/review-container.component.ts",
    "app/review-group/review-group.component.ts",
    "app/review-group/review-overview.component.ts",
    "app/review-group/review-rating.component.ts",
    "app/review-group/review.service.ts",
    "app/review-group/shared/index.ts",
    "app/shared/index.ts",
    "main.ts",
    "system-config.ts",
    "typings.d.ts"
  ],
  "filesGlob": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
